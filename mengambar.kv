# mengambar.kv

<SelectedColorEllipse>:
    size: 5,5

    canvas:
        Color:
            rgba: self.selected_color

        Ellipse:
            size: self.size
            pos: self.pos 
            
   

<ColPopup>:
    title: 'Pilihan Warna RGB'
    size_hint: None, None
    size: 600,600
    auto_dismiss: False
    ColPckr:
        on_color: app.root.selected_color = self.color
        Button:
            text: 'Tentukan'
            pos_hint: {'center_x': .76, 'y': .03}
            size_hint: None, None
            size: 100, 50
            on_press: root.dismiss()
            

<mengambar>:
    size: root.size
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'background.png'

    Button:
    	
        size_hint: None, None
        size: 150,20
        pos: 650,0
        text: 'Pilih WarnaRGB'
        on_press: root.select_ColPckr(*args)
        

   
   


    
